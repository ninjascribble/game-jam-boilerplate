{
  "name": "game-jam-boilerplate",
  "version": "1.0.1",
  "description": "A bit of practice with Phaser, ES2015 and Webpack",
  "scripts": {
    "start": "npm install; npm run dev",
    "dev": "webpack-dev-server --content-base build/ --inline",
    "build": "webpack -p",
    "lint": "eslint ./src/scripts/*",
    "clean": "rm -rf ./build",
    "destroy": "npm run clean; rm -rf ./node_modules",
    "publish": "npm run build; rm -rf ./docs; cp -R ./build ./docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ninjascribble/LudumDare34-Practice"
  },
  "author": "@ninjascript",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/rot-js": "^0.6.5",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.1",
    "eslint": "2.11.0",
    "eslint-config-idiomatic": "2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "phaser3-docs": "github:photonstorm/phaser3-docs",
    "rot-js": "^2.0.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "phaser": "~3"
  }
}
